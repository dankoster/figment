{
	"name": "Figment",
	"description": "Quickly find the code for rendered react components!",
	"version": "1.0",
	"manifest_version": 3,
	"action": {
		"default_title": "Click to toggle on/off"
	},
	"background": {
		"service_worker": "serviceWorker.js",
		"type": "module"
	},	
	"content_scripts": [{
        "js": ["contentscript.js"],
        "matches": ["http://*/*", "https://*/*"]
    }],
	"web_accessible_resources": [
		{
			"resources": [ 
				"Figment.js", 
				"elementFunctions.js",
				"Menu.js",
				"FigmentOutline.js",
				"Trace.js",
				"styles.css" 
			],
			"matches": [ "<all_urls>" ]
		}
	],
	"externally_connectable": {
		"matches": [
			"http://*/*"
		]
	},
	"permissions": [
		"storage",
		"activeTab",
		"scripting",
		"unlimitedStorage"
	],
	"host_permissions": [
		"http://*/*",
		"https://*/*"
	]
}