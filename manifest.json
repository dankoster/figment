{
	"name": "Figment",
	"description": "Figma faster!",
	"version": "1.0",
	"manifest_version": 3,
	"action": {
		"default_popup": "popup.html"
	},
	"background": {
		"service_worker": "background.js"
	},	
	"content_scripts": [{
        "js": ["contentscript.js"],
        "matches": ["http://*/*", "https://*/*"]
    }],
	"web_accessible_resources": [
		{
			"resources": [ "reactMouse.js", "styles.css" ],
			"matches": [ "<all_urls>" ]
		}
	],
	"externally_connectable": {
		"matches": [
			"http://localhost/*"
		]
	},
	"permissions": [
		"storage",
		"activeTab",
		"scripting",
		"unlimitedStorage"
	],
	"host_permissions": [
		"http://*/*",
		"https://*/*"
	]
}